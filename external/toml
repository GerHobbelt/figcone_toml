include(FetchContent)
Set(FETCHCONTENT_QUIET FALSE)
if (NOT toml11_FOUND)
    FetchContent_Declare(
            toml
            GIT_REPOSITORY https://github.com/ToruNiina/toml11.git
            GIT_TAG        v3.7.1
            GIT_SHALLOW    ON
            GIT_PROGRESS TRUE
    )
    FetchContent_GetProperties(toml)
    if(NOT toml_POPULATED)
        FetchContent_Populate(toml)
    endif()
endif()
